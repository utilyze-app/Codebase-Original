# UTILYZE AI Chatbot - Environment Variables
# Copy to .env.local and update with your values

# Authentication Secret
# Generate a random secret: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
AUTH_SECRET=****

# AI/LLM API Keys
# Get your xAI API Key here for chat and image models: https://console.x.ai/
XAI_API_KEY=****

# Alternative AI providers (uncomment as needed)
# OPENAI_API_KEY=****
# ANTHROPIC_API_KEY=**** 
# GOOGLE_AI_API_KEY=****

# Database Configuration
# For local development, use SQLite: file:./local.db
# For production, use PostgreSQL: https://vercel.com/docs/storage/vercel-postgres/quickstart
DATABASE_URL="file:./local.db"
POSTGRES_URL=****

# Storage Configuration
# Instructions to create a Vercel Blob Store here: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=****

# Cache Configuration
# Instructions to create a Redis store here: https://vercel.com/docs/redis
REDIS_URL=****

# UTILYZE Specific Configuration
APP_NAME="UTILYZE AI Chatbot"
UTILITY_DATA_API_URL=""
GAS_LEAK_API_URL=""

# Development Settings
NODE_ENV="development"
DEBUG=true
LOG_LEVEL="debug"
